page {
  height: 100%
}
.container {
  height: 100%;
  padding: 0;
  box-sizing: border-box;
} 
image{
  width: 100%;
  height: 100% ;
}
.bg_f5{
  background-color: #f5f5f5
}
.content_center{
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
  align-items: center;
}
.modal {
  position:fixed;
  top:0;
  width:100%;
  height:100%;
  z-index:999;
  background:rgba(0, 0, 0, 0.7);
}
.modal-dialog {
  width:76%;
  margin:20% auto 0;
  background:linear-gradient(#ffe744,#ffae00);
  box-sizing:border-box;
  border-radius:10px;
  padding:10px;
}
.modal-title{
  text-align: center;
  font-size: 36rpx;
  margin-bottom: 10rpx;
  font-weight: bold;
} 
.center{
  text-align: center;
  margin: 5px auto
}
.m_10{
  margin: 10px 0;
}
