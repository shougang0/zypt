/* pages/free/free.wxss */
view,text{
  padding:0;
}
page{
  background: url("https://www.zhongyoupingtai.com/resources/mobile/game/img/new_byimg/bg.png")  no-repeat ;
   background-size: 100% 120%;
  
}
.free {
   
}
.toptitle{
  height: 75rpx;
  width: 68%;
  margin: 0 auto;
  display: block;
  padding: 40rpx 0;
}
.turnplate {
  position: relative;
  margin: 0 auto;
  width: 700rpx;
  height:700rpx;
  background: url("https://www.zhongyoupingtai.com/resources/mobile/game/img/new_byimg/round.gif");
  background-size: 100% ;
}
.free .btnGroup{
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  margin: 20px 10% 0;
}
.btnGroup button{
  border: 1px solid #fff;
  background-color: #F92323;
  font-weight: bold;
}
.textTitle{
  width:92%;
  margin:0 auto 40px;
}
.textTitle>text,.textTitle>view{
  color:#ffb700;
  font-size:24rpx;
  line-height: 48rpx;
  text-align: center
}
.pointer{
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  top: 50%;
  margin-top: -150rpx;
  left:50%;
  margin-left:-150rpx;
  z-index: 5;
}

.showItem{
  position: absolute;
  text-align: center;
  width: 100%;
  height: 100%;
  font-size: 16rpx;
  color:red;
  padding-top:10rpx;

}
.showItem image{
  width:38rpx;
  height:38rpx;
  margin-top:10px;

}
.goods{
  position: absolute;
  margin-top: 12%;
  margin-left:12%;
  width: 76%;
  height: 76%;
  transition:all 5s;
}

.modal-dialog .colse{
  text-align: center;
  margin-top:10px;
}
.line{
  position: absolute;
  top:9%;
  left:12%;
  width: 76%;
  height:82%;
  transition:all 5s;
}
.line view{
    position: absolute;
    left: 50%;
    top: 0px;
    width: 0px;
    height: 100%;
    border-left: 1rpx solid;
}
.modal-dialog{
  border: 1px solid #fff;
}
.modal-body{
  font-size: 24rpx;
}
.modal-body > view{
  margin-bottom: 10rpx;
}
.colse button{  
    font-size: 24rpx;
    background: linear-gradient(#ffe744,#ffae00);
    border: 1px solid #fff;
    color: #000;   
}
