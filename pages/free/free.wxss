/* pages/free/free.wxss */
view,text{
  padding:0;
}
.free {
   width: 100%;
   min-height: 1200rpx;
   background: url("https://www.zhongyoupingtai.com/resources/mobile/game/img/new_byimg/bg.png");
  background-size: 100% 100%;
}
.toptitle{
  height: 75rpx;
  width: 68%;
  margin: 0 auto;
  display: block;
}
.turnplate {
  position: relative;
  margin: 0 auto;
  width: 700rpx;
  height:700rpx;
  background: url("https://www.zhongyoupingtai.com/resources/mobile/game/img/new_byimg/round.gif");
  background-size: 100% ;
}
.free .btnGroup{
  display: flex;
  justify-content: space-around;
}
.btnGroup button{
  border: 1px solid #fff;
}
.textTitle{
  width:92%;
  margin:0 auto;
}
.textTitle>text,.textTitle>view{
  color:#ffb700;
  font-size:32rpx;
  line-height: 48rpx;
  text-align: center
}
.pointer{
  position: absolute;
  width: 268rpx;
  height: 268rpx;
  top: 50%;
  margin-top: -134rpx;
  left:50%;
  margin-left:-134rpx;
  z-index: 5;
}

.showItem{
  position: absolute;
  text-align: center;
  width: 100%;
  height: 100%;
  font-size: 10px;
}
.showItem image{
  width:60rpx;
  height:60rpx;
}
.goods{
  position: absolute;
  margin-top: 12%;
  margin-left:12%;
  width: 76%;
  height: 76%;
  transition:all 5s;
}

.modal-dialog .colse{
  text-align: center;
  margin-top:10px;
}
.line{
  position: absolute;
  top:9%;
  left:12%;
  width: 76%;
  height:82%;
  transition:all 5s;
}
.line view{
    position: absolute;
    left: 50%;
    top: 0px;
    width: 0px;
    height: 100%;
    border-left: 1rpx solid;
}
