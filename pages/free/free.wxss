/* pages/free/free.wxss */
view,text{
  padding:0;
}
page{
  background: url(http://zhongyouapp.com/resources/mobile/game/img/new_byimg/bg.jpg)  no-repeat ;
   background-size: 100% 120%;  
  
}

.toptitle{
  height: 75rpx;
  width: 68%;
  margin: 0 auto;
  display: block;
  padding: 40rpx 0;
}
.turnplate {
  position: relative;
  margin: 0 auto;
  width: 700rpx;
  height:700rpx;
  background: url("http://zhongyouapp.com/resources/mobile/game/img/new_byimg/round.png");
  background-size: 100% ;
}
.free .btnGroup{
  display: flex;
  justify-content: space-around;
  margin-top: 40rpx;
  margin: 20px 5% 0;
}
.btnGroup button{
  font-weight: bold;
  background: linear-gradient(#fbc6cb, #fe5c95);
  border-radius: 40rpx;
}
.textTitle{
  width:82%;
  margin:20px auto;
  background: #f5f5f5;
    box-shadow: 0 4px 8px rgba(179,12,0 ,.5);
    color: #000;
    opacity: .7;
    font-size: 24rpx;
    padding: 10px;
    border-radius: 10px;
    text-align: left;
    line-height: 20rpx;
    box-sizing:border-box;
}
.textTitle>text,.textTitle>view{
  color:#000;
  font-size:24rpx;
  line-height: 48rpx;
}
.pointer{
  position: absolute;
  width: 300rpx;
  height: 300rpx;
  top: 50%;
  margin-top: -150rpx;
  left:50%;
  margin-left:-150rpx;
  z-index: 5;
}

.showItem{
  position: absolute;
  text-align: center;
  width: 100%;
  height: 100%;
  font-size: 16rpx;
  color:red;
  padding-top:20rpx; 
  box-sizing:border-box;

}
.showItem>view{
  height: 100%;
}
.showItem image{
  width:38rpx;
  height:38rpx;
  margin-top:10px;

}
.goods{
  position: absolute;
  margin-top: 10%;
  margin-left:10%;
  width: 80%;
  height: 80%;
  transition:all 5s;
  background: url(http://www.zyylpt.com/resources/mobile/game/img/new_pic/free_c_bj.png) no-repeat;
  background-size: 100% 100%; 
  overflow: hidden;
}

.modal-dialog .colse{
  text-align: center;
  margin-top:10px;
}
.line{
  position: absolute;
  top:9%;
  left:12%;
  width: 76%;
  height:82%;
  transition:all 5s;
}
.line view{
    position: absolute;
    left: 50%;
    top: 0px;
    width: 0px;
    height: 100%;
    border-left: 1rpx solid;
}
.modal-dialog{
  border: 1px solid #fff;
}
.modal-body{
  font-size: 24rpx;
}
.modal-body > view{
  margin-bottom: 10rpx;
}
.colse button{  
    font-size: 24rpx;
    background: linear-gradient(#ffe744,#ffae00);
    border: 1px solid #fff;
    color: #000;   
}

.white{
  color:white;
}