/* pages/rich/rich.wxss */
page{
  background:url("http://www.zyylpt.com/Public/images/home/play/new_bg1.jpg");
  background-repeat-x: no-repeat;
  background-size: contain;
}
.content{
  overflow:hidden; 
}
.btnGroup{
  display: flex;
  justify-content: space-around;
  width: 90%;
  align-items:center;
  font-size: 24rpx;
  padding:10px 0;
  margin: 0 auto; 
}
.btnGroup  view{
  background: linear-gradient(#fbc6cb, #fe5c95);
  border-radius: 6px;
  color: #fff;
  width:25%;
  text-align: center;
  padding: 3px;
}
.btnGroup .black{
  width:25%;
}
.btnGroup .black >view{
  width:100%;
}
/* ------------------- */
.img_detail{
  width: 84%;
  margin: 0 auto 10px;
  background: #f5f5f5;
  box-shadow: 0 4px 8px rgba(179,12,0 ,.5);
  color: #666;
  font-size: 24rpx;
  padding:2px 10px 10px 10px ;
  box-sizing: content-box;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
  opacity: 0.7;
}
.c_red {
    color: #c53528;
}
/*----------------------  */
.imglist{
  padding:20rpx;
  position: relative;
  background: #f5f5f5;
  width: 84%;
  margin:0 auto; 
  box-shadow: 0 0 4px 2px rgba(230,0,131 ,.2);
  overflow: hidden;
}
.imglist>view{
  overflow: hidden;
  box-shadow: 0 0 4px 2px rgba(230,0,131 ,.2);
}
.imgItem {
  width: 33.33%;
  float:left;
  box-sizing:border-box;
  height: 220rpx;
  position: relative;
}
.top_prize{
    background: linear-gradient(#fbc6cb, #fe5c95);
    font-size: 40rpx;
    color: #fff;
    width: 74%;
    box-shadow: 0 2px 2px #B1143B;
    margin: 50rpx auto 20px;
    border-radius: 20px;
    text-align: center;
    height: 86rpx;
    line-height: 90rpx;
}
.numbox{
  position: absolute;
    bottom: 0;
    right: 0px;
    color: #fff;
    background: #FE609A;
    padding: 2rpx 10rpx;
    font-size: 24rpx;
}

.imgItem:last-child,.imgItem:nth-last-child(2){
  width: 50%;
}
.filter{
  filter:grayscale(.8);
}


