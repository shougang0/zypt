.container{
     background-image: linear-gradient(#Fe4847, #Ff1855);
}
.btnGroup{
  display: flex;
  justify-content: space-around;
  width: 98%;
  align-items:center;
  font-size: 32rpx;
  padding:10px 0; 
}
.btnGroup  view{
  background: linear-gradient(#fc2727, #e20000);
  border-radius: 6px;
  color: #fff;
  width:25%;
  text-align: center;
  padding: 3px;
}
.btnGroup .black{
  width:25%;
}
.btnGroup .black >view{
  width:100%;
}
