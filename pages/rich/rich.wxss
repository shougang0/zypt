.imglist{
  padding:0 3% 20px;
  position: relative;
  background: #f5f5f5;
  width: 88%;
  margin:0 auto; 
  box-shadow: 0 4px 8px rgba(179,12,0 ,.5);
}
.imgItem> view{
  height: 180rpx;
}
.imgItem {
  width: 19%;
  height: 220rpx;
  display: inline-block;
  margin: 20px 3% 10px;
}
