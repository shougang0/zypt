<!--pages/goodstuff/increase.wxml-->
<view class='banner'>
  <image src='http://www.zhongyoupingtai.com/weixin/img/increaseBanner.jpg'></image>
</view>
<view class='container'>
  <view class='thead'>
    <text class='num'>数量</text>
    <text class='time'>时间</text>
  </view>
  <view>
    <view wx:if="{{list==''}}" class='text-center'>您没有参加过平台活动，未获得奖励大米！！</view>
    <view wx:for="{{list}}" class='m_10' >
      <text class='num'>{{item.moneyadd}}</text>
      <text class='time'>{{item.addtime}}</text>
    </view>
  </view>
  <!-- <view>仅展示最近最近15条</view> -->
</view>

