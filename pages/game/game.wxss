/* pages/game/game.wxss */
.TopBanner{
  height:260rpx;
}

.btnGroup{
  position: fixed;
  bottom: 5px;
  z-index: 10;
  left: 1%;
  display: flex;
  justify-content: space-around;
  width: 98%;
  align-items:center;
}
.btnGroup > text,.bt4{
  font-size: 28rpx;
  display: block;
  width: 18%;
  text-align:center;
  box-shadow: 0 5px 10px rgba(255, 50 ,10, .8);
  background:linear-gradient( #ff2a03,#ff4a17 );
  border-radius: 24px;
  color: #fff;
  height:52rpx;
  line-height:  52rpx; 
}
.btnGroup .bt3{
  height: 132rpx;
  line-height: 132rpx;
  border-radius: 50%;
}
.rulelist {
  display: flex;
  flex-wrap: wrap;
  margin-bottom:40px;
}
.rulelist > view{
  width: 20%;
  height: 148rpx;
}
.modal-title {
  font-size:36rpx;
}
.img_container{
  height:100px;
  width: 100px;
  margin: 0 auto;
}
.tenImg > view{
  width:19%;
  height:100rpx;
  margin-top:10rpx;
  background-color: #fff;
}
.btn{
  /* background:linear-gradient(#fc2727, #e20000); */
  background: linear-gradient(#ffe744,#ffae00);
  border-radius:6px;
  color:#000;
  border:1px solid #fff;
  width:170rpx;
  text-align:center;
  padding:3px;
}
.modal_opacity{
  background:rgba(0, 0, 0, 0.3);
}
.opacity_0{
  opacity: 0
}