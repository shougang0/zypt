/* pages/game/game.wxss */
.TopBanner{
  height:260rpx;
}

.btnGroup{
  position: fixed;
  bottom: 5px;
  z-index: 10;
  left: 1%;
  display: flex;
  justify-content: space-around;
  width: 98%;
  align-items:center;
}
.btnGroup > text,.bt4{
  font-size: 28rpx;
  display: block;
  width: 18%;
  text-align:center;
  box-shadow: 0 5px 10px rgba(84, 209 ,170, .8);
  background:linear-gradient(#54d1b3,#10a6af);
  border-radius: 24px;
  color: #fff;
  height:52rpx;
  line-height:  52rpx; 
}
.btnGroup .bt3{
  height: 132rpx;
  line-height: 132rpx;
  border-radius: 50%;
}
.rulelist {
  display: flex;
  flex-wrap: wrap;
  margin-bottom:40px;
}
.rulelist > view{
  width: 20%;
  height: 148rpx;
}
.modal-title {
  margin-top: 20rpx;
  font-size:36rpx;
  font-weight: 200;
}
.img_container{
  height:150px;
  width: 150px;
  margin: 0 auto;
  font-size: 36rpx;
}
.tenImg > view{
  width:19%;
  height:100rpx;
  margin-top:10rpx;
  background-color: #fff;
}
.btn{
  background: linear-gradient(#54d1b3,#10a6af);
  border-radius:12px;
  color:#fff; 
  width:170rpx;
  text-align:center;
  padding:6px;
  font-size:24rpx;
  margin-bottom:40px;
}
.modal_opacity{
  background:rgba(0, 0, 0, 0.3);
}
.opacity_0{
  opacity: 0
}
