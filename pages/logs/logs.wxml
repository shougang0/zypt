<!--logs.wxml-->
<view class="log-list">
<image class="avatar" src="{{baseUrl}}resources/mobile/shop/images/new-img/login-logo.png"></image>
  <form bindsubmit="formSubmit" bindreset="formReset">
    <view class="section">
      <text class="section__title">用户名</text>
      <input name="user" type='text' placeholder=" 请输入平台用户名"  auto-focus/>
    </view>
    <view class="section">
      <text class="section__title">输入密码</text>
      <input name="password" type='password' placeholder=" 请输入密码"/>
    </view>
    <view class="btn-area">
      <button formType="submit"  type='default' class='login_btn'>登 录</button>
    </view>
  </form>
</view>